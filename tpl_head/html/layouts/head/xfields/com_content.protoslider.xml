<?xml version="1.0" encoding="UTF-8"?>
<form>
	<fields name="attribs">
		<fieldset name="protoslider">
			<field
				name="note-protoslider"
				type="note"
				label="Protoslider"
				description="Für Blog, Blog-Beiträge und Beiträge.&lt;br&gt; Siehe Layout: /templates/head/html/layouts/head/protoslider.php"
			/>

			<field 
				name="preview_protoslider_options"
				label="Vorschau Protoslider Optionen"
				description="Protoslider Optionen in JSON Syntax"
				type="textarea"
				cols="80"
				rows="4"
				default="{&quot;autoheight&quot;:true,&quot;navigation&quot;:false}"
				hint="JSON: {&quot;option&quot;:&quot;wert&quot;,...}"
			/>
			
			<field 
				name="preview_protoslider" 
				type="subform"
			    formsource="/templates/head/html/layouts/head/xfields/subform.protoslider.xml"
				multiple="true"
			    label="Vorschau Protoslider (Blog Beiträge, mod_articles_head)"
				description=""
				max="10"
				layout="joomla.form.field.subform.repeatable"
			/>

			<field 
				name="protoslider_options"
				label="Protoslider Optionen"
				description="Protoslider Optionen in JSON Syntax"
				type="textarea"
				cols="80"
				rows="4"
				default="{&quot;autoheight&quot;:false}"
				hint="JSON: {&quot;option&quot;:&quot;wert&quot;,...}"
			/>

			<field name="protoslider" type="subform"
			    formsource="/templates/head/html/layouts/head/xfields/subform.protoslider.xml"
				multiple="true"
			    label="Protoslider (Beiträge, Kategorien)"
				description=""
				max="10"
				layout="joomla.form.field.subform.repeatable"
			/>
		</fieldset>
	</fields>
</form>
